{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": false,
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": false,
    "moduleResolution": "node",
    "lib": ["es2015", "dom"]
  },
  "exclude": [
    "node_modules",
    "test/**/*.ts"
  ],
  "filesGlob": [
    "./**/*.ts",
    "./node_modules/@types/**/*.d.ts"
  ]
}
